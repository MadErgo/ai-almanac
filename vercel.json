{
  "version": 2,
  "name": "ai-almanac",
  "env": {
    "DEEPSEEK_API_KEY": {
      "description": "Deepseek API Key",
      "required": true
    }
  },
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "api.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1",
      "status": 200
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}